<div class="mx-3 mt-5 pe-0">
  <div class="mb-3 w-100 mx-auto text-center">
    <h1>Restaurants</h1>
  </div>
  <table class="table table-striped table-bordered table-info">
    <thead>
      <tr class="text-center">
        <th rowspan="2" scope="col">ID</th>
        <th rowspan="2" scope="col">Name</th>
        <th rowspan="2" scope="col">Cousine</th>
        <th rowspan="2" scope="col">Borough</th>
        <th rowspan="2" scope="col">Address</th>
        <th colspan="3" scope="col">Grades</th>
      </tr>
      <tr class="text-center">
        <th>Date</th>
        <th>Grade</th>
        <th>Score</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      {{#each restaurants}}
      <tr>
        <th scope="row">{{this.restaurant_id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.cuisine}}</td>
        <td>{{this.borough}}</td>
        <td>{{this.address.building}} {{this.address.street}}, {{this.address.zipcode}}</td>
        <td>
          {{#each this.grades}}
            <li class="list-unstyled">{{dateFormat this.date}}</li>
          {{/each}}
        </td>
        <td>
          {{#each this.grades}}
            <li class="list-unstyled">{{this.grade}}</li>
          {{/each}}
        </td>
        <td>
          {{#each this.grades}}
            <li class="list-unstyled">{{this.score}}</li>
          {{/each}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>